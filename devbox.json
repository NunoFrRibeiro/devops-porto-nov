{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.23.0",
    "github:dagger/nix/9852fdddcdcb52841275ffb6a39fa1524d538d5a#packages.x86_64-linux.dagger",
    "just@1.34.0",
    "kubernetes-helm@3.15.4",
    "k9s@0.32.5",
    "bat@0.24.0",
    "gh@2.57.0",
    "golangci-lint@1.62.0",
  ],
  "shell": {
    "init_hook": [
      "alias cat='bat --theme 1337'",
      "alias j=just",
      "alias helm=helm --kubeconfig=$PWD/talos/kubeconfig",
      "eval \"$(dagger completion bash)\"",
      "eval \"$(helm completion bash)\"",
      "eval \"$(just --completions bash)\"",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ],
    },
  },
}
